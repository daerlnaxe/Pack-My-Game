<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <SolidColorBrush Color="WhiteSmoke" x:Key="Pale"/>
    <SolidColorBrush Color="#FF132F4B" x:Key="LeftMenu"/>
    <!-- Label -->
    <Style TargetType="Label" x:Key="lbStyle">
        <Setter Property="IsTabStop" Value="False"/>
    </Style>
    <!-- Button -->
    <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
        <Setter Property="Background" Value="Azure"/>
    </Style>
    <!---->
    <Style TargetType="Button" x:Key="btStyle">        
        <Setter Property="Margin" Value="5,3,5,3"/>
        <Setter Property="Padding" Value="3"/>
    </Style>
    <!-- TextBlock -->
    <Style TargetType="TextBlock" x:Key="tbTitle">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Margin" Value="10"/>
    </Style>
    <Style TargetType="TextBlock" x:Key="tblockStyle">
    </Style>
    <!-- Textbox -->
    <Style TargetType="TextBox" x:Key="tboxStyle">
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>
</ResourceDictionary>